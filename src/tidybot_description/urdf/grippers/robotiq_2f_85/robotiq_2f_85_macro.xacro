<?xml version="1.0"?>
<!--
  Robotiq 2F-85 Gripper Loader
  
  Unified gripper definition compatible with both Isaac Sim and Gazebo.
  Uses NVIDIA Isaac Sim coordinate system for consistency across simulators.
  
  For Gazebo: outer_finger_joint is fixed (can't simulate closed-loop)
  For Isaac Sim: Uses physics constraints via setup script
-->
<robot name="robotiq_arg2f_85_model"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="load_gripper" params="parent prefix">
    <xacro:include filename="$(find tidybot_description)/urdf/grippers/robotiq_2f_85/robotiq_arg2f_85_model_macro.xacro" />

    <!-- Tool frame -->
    <link name="${prefix}tool_frame"/>
    <joint name="${prefix}tool_frame_joint" type="fixed">
      <origin xyz="0 0 0.120" rpy="0 0 0"/>
      <parent link="${parent}"/>
      <child link="${prefix}tool_frame"/>
      <axis xyz="0 0 0"/>
    </joint>

    <!-- Gripper assembly (matching Isaac Sim coordinate system) -->
    <!-- The gripper uses NVIDIA's coordinate frame (X forward, Z up) -->
    <!-- Rotation aligns gripper with robot's end effector frame -->
    <xacro:robotiq_gripper prefix="${prefix}" parent="${parent}">
      <origin xyz="0.0 0.0 0.0" rpy="3.1415927 -1.5707964 1.5707964"/>
    </xacro:robotiq_gripper>
  </xacro:macro>

</robot>