<?xml version="1.0"?>

<robot name="tidybot" xmlns:xacro="http://ros.org/wiki/xacro">
    <!-- <xacro:arg name="hardware_plugin" default="mock_components/GenericSystem" />     -->
    <xacro:arg name="hardware_plugin" default="gz_ros2_control/GazeboSimSystem" />
    <xacro:arg name="arm" default="gen3_7dof" />
    <xacro:arg name="gripper" default="robotiq_2f_85" />
    <xacro:arg name="vision" default="true" />
    <xacro:arg name="prefix" default="" />
    <xacro:arg name="ros2_control_config_path" default="$(find tidybot_description)/config/tidybot_controllers.yaml"/>

    <xacro:include filename="$(find tidybot_description)/urdf/bot.xacro" />

    <!-- load the robot -->
    <xacro:load_bot arm="$(arg arm)" gripper="$(arg gripper)" vision="$(arg vision)" prefix="$(arg prefix)" />

    <!-- configure ros2_control joints -->
    <xacro:include filename="$(find tidybot_description)/urdf/tidybot.ros2_control.xacro" />
    <xacro:load_ros2_control hardware_plugin="$(arg hardware_plugin)" arm="$(arg arm)" gripper="$(arg gripper)" />

    <!-- load gazebo plugins -->
    <xacro:include filename="$(find tidybot_description)/urdf/tidybot.gazebo.xacro" />
    <xacro:load_gazebo_plugins config_path="$(arg ros2_control_config_path)" prefix="$(arg prefix)" arm="$(arg arm)" vision="$(arg vision)" />

</robot>
